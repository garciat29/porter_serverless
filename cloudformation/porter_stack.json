{
    "Resources": {
        "S3AppAssets": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"}
                ]
            }
        },
        "S3RAWDEV": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "S3CLEANDEV": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "S3RAWTST": {
            "Type": "AWS::S3::Bucket",
            "DependsOn": ["SNSTstPolicy"],
            "Properties": {
                "NotificationConfiguration": {
                    "TopicConfigurations" : [
                        {
                            "Topic" : {"Ref" : "SNSRawTstUpload"},
                            "Event" : "s3:ObjectCreated:*"
                        }
                    ]
                    
                },
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "tst"}
                ]
            }
        },
        "S3CLEANTST": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "tst"}
                ]
            }
        },
        "S3RAWPRD": {
            "Type": "AWS::S3::Bucket",
            "DependsOn": ["SNSPrdPolicy"],
            "Properties": {
                "NotificationConfiguration": {
                    "TopicConfigurations" : [
                        {
                            "Topic" : {"Ref" : "SNSRawPrdUpload"},
                            "Event" : "s3:ObjectCreated:*"
                        }
                    ]
                    
                },
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "prd"}
                ]
            }
        },
        "S3CLEANPRD": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "prd"}
                ]
            }
        },
        "S3GlueJobDEV": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "S3GlueJobTST": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "S3GlueJobPRD": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "GlueDbRAWDEV":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_raw_dev"
                }
            }
        },
        "GlueDbCLEANDEV":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_clean_dev"
                }
            }
        },
        "GlueDbRAWTST":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_raw_tst"
                }
            }
        },
        "GlueDbCLEANTST":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_clean_tst"
                }
            }
        },
        "GlueDbRAWPRD":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_raw_prd"
                }
            }
        },
        "GlueDbCLEANPRD":{
            "Type" : "AWS::Glue::Database",
            "Properties" : {
                "CatalogId" : { "Ref" : "AWS::AccountId" },
                "DatabaseInput" : {
                    "Name" : "porter_clean_prd"
                }
            }
        },
        "GROUPPORTERENG": {
          "Type" : "AWS::IAM::Group",
          "Properties" : {
              "GroupName" : "PorterEngineer",
              "Policies": [
                {
                  "PolicyDocument" : {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "s3:*"
                            ],
                            "Resource": "arn:aws:s3:::porter-*"
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "codecommit:*"
                            ],
                            "Resource": [ 
                                {"Fn::GetAtt": ["AppRepo", "Arn"]},
                                {"Fn::GetAtt": ["ETLDevRepo", "Arn"]},
                                {"Fn::GetAtt": ["ETLTstRepo", "Arn"]},
                                {"Fn::GetAtt": ["ETLPrdRepo", "Arn"]}
                            ]
                        }
                    ]
                  },
                  "PolicyName" : "PorterEngineer"
                }
              ]
            }
        },
        "GROUPPORTERANALYST": {
          "Type" : "AWS::IAM::Group",
          "Properties" : {
              "GroupName" : "PorterAnalyst",
              "Policies": [
                {
                  "PolicyDocument" : {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Resource": "arn:aws:s3:::porter-*cleanprd-*"
                        }
                    ]
                  },
                  "PolicyName" : "PorterEngineer"
                }
              ]
            }
        },
        "ETLJobExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "RoleName" : "PorterETLExecutor",
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"}
                  ],
                "Policies": [
                    {
                        "PolicyName": "LambdaExecutionRole",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "lambaaccess",
                                    "Effect": "Allow",
                                    "Action": [
                                        "lambda:CreateEventSourceMapping",
                                        "lambda:ListEventSourceMappings",
                                        "lambda:ListFunctions"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Sid": "writelogs",
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                },
                                {
                                    "Sid": "gluePermissions",
                                    "Effect": "Allow",
                                    "Action": [
                                        "glue:CreateJob",
                                        "glue:CreateTable",
                                        "glue:StartCrawler",
                                        "glue:CreateDatabase",
                                        "glue:StartJobRun",
                                        "glue:StopCrawler",
                                        "glue:CreatePartition",
                                        "glue:GetJob",
                                        "glue:StartTrigger",
                                        "glue:CreateCrawler"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Sid": "sqsPermissions",
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:DeleteMessage",
                                        "sqs:GetQueueAttributes",
                                        "sqs:ReceiveMessage"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "GlueLabRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "glue.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/service-role/",
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
                ],
                "Policies": [
                    {
                        "PolicyName": "S3Access",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "s3access",
                                    "Effect": "Allow",
                                    "Action": "s3:*",
                                    "Resource": "arn:aws:s3:::porter-*"
                                }
                            ]
                        }
                    }
                ]
            }    
        },
        "AppRepo": {
            "Type" : "AWS::CodeCommit::Repository",
            "Properties" : {
                "RepositoryDescription" : "Porter App Assets",
                "RepositoryName" : "PorterApp",
                "Tags" : [
                    {"Key": "app",
                    "Value": "porter"}
                ]
            }
        },
        "ETLDevRepo": {
            "Type" : "AWS::CodeCommit::Repository",
            "Properties" : {
                "RepositoryDescription" : "Development Environment ETL Assets",
                "RepositoryName" : "PorterETLDev",
                "Tags" : [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "dev"}
                ]
            }
        },
        "ETLTstRepo": {
            "Type" : "AWS::CodeCommit::Repository",
            "Properties" : {
                "RepositoryDescription" : "Development Environment ETL Assets",
                "RepositoryName" : "PorterETLTst",
                "Tags" : [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "tst"}
                ]
            }
        },
        "ETLPrdRepo": {
            "Type" : "AWS::CodeCommit::Repository",
            "Properties" : {
                "RepositoryDescription" : "Development Environment ETL Assets",
                "RepositoryName" : "PorterETLPrd",
                "Tags" : [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "prd"}
                ]
            }
        },
        "SNSRawTstUpload": { 
            "Type" : "AWS::SNS::Topic",
            "Properties" : {
                "DisplayName" : "PorterRawTstUpload",
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "tst"}
                ],
                "TopicName" : "PorterRawTstUpload",
                "Subscription" : [
                    {
                        "Endpoint" : {"Fn::GetAtt": ["SQSTst", "Arn"]},
                        "Protocol" : "sqs"
                    }
                ]
              }
        },
        "SNSTstPolicy": {
            "Type": "AWS::SNS::TopicPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Id": "SNSTopicPolicy",
                    "Statement": [
                        {
                            "Sid": "Statement-id",
                            "Effect": "Allow",
                            "Principal": { "AWS": "*" },
                            "Action": "sns:Publish",
                            "Resource": { "Ref": "SNSRawTstUpload" },
                            "Condition": {
                                "ArnLike": {
                                    "aws:SourceArn": { "Fn::Join": [ "", [ "arn:aws:s3:::", "porter-*rawtst*" ]]} }
                            }
                        }
                    ]
                },
                "Topics": [ { "Ref": "SNSRawTstUpload" } ]
            }
        },
        "SNSRawPrdUpload": { 
            "Type" : "AWS::SNS::Topic",
            "Properties" : {
                "DisplayName" : "PorterRawPrdUpload",
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "prd"}
                ],
                "TopicName" : "PorterRawPrdUpload",
                "Subscription" : [
                    {
                        "Endpoint" : {"Fn::GetAtt": ["SQSPrd", "Arn"]},
                        "Protocol" : "sqs"
                    }
                ]
              }
        },
        "SNSPrdPolicy": {
            "Type": "AWS::SNS::TopicPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Id": "SNSTopicPolicy",
                    "Statement": [
                        {
                            "Sid": "Statement-id",
                            "Effect": "Allow",
                            "Principal": { "AWS": "*" },
                            "Action": "sns:Publish",
                            "Resource": { "Ref": "SNSRawPrdUpload" },
                            "Condition": {
                                "ArnLike": {
                                    "aws:SourceArn": { "Fn::Join": [ "", [ "arn:aws:s3:::", "porter-*rawprd*" ]]} }
                            }
                        }
                    ]
                },
                "Topics": [ { "Ref": "SNSRawPrdUpload" } ]
            }
        },
        "SQSTst": {
            "Type" : "AWS::SQS::Queue",
            "Properties" : {
                "VisibilityTimeout": 900,
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "tst"}
                ]
            }
        },
        "SQSPrd": {
            "Type" : "AWS::SQS::Queue",
            "Properties" : {
                "VisibilityTimeout": 900,
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"},
                    {"Key": "env",
                    "Value": "prd"}
                ]
            }
        },
        "LogGroupApp": {
            "Type" : "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": "PorterApp"
            }
        },
        "RoleCodebuild": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument" : {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "codebuild.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "CodebuildRole",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Resource": {"Fn::GetAtt": ["AppRepo", "Arn"]},
                                    "Action": "codecommit:GitPull"
                                },
                                {
                                    "Effect": "Allow",
                                    "Resource": {"Fn::GetAtt": ["LogGroupApp", "Arn"]},
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "AppBuildProject": {
            "Type": "AWS::CodeBuild::Project",
            "Properties": {
                "Artifacts": {
                    "Type": "S3",
                    "Location": {"Ref": "S3AppAssets"}
                },
                "Environment": {
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "Image": "aws/codebuild/amazonlinux2-x86_64-standard:3.0",
                    "Type": "LINUX_CONTAINER"
                },
                "ServiceRole":  {"Fn::GetAtt": ["RoleCodebuild", "Arn"]},
                "Source": {
                    "Location": {"Fn::GetAtt": ["AppRepo", "CloneUrlHttp"]},
                    "Type": "CODECOMMIT"
                },
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"}
                ]
            }
        },
        "LambdaInvokeGlueTST": {
            "Type" : "AWS::Lambda::Function",
            "Properties" : {
                "Code": {
                    "S3Bucket" : "porter-public-assets",
                    "S3Key" : "lambda/porter-glue-executor.zip"
                },
                "Description": "Invoke a glue job to convert data from raw to clean",
                "Handler": "porter-glue-executor.lambda_handler",
                "Role": {"Fn::GetAtt": ["ETLJobExecutionRole", "Arn"]},
                "Runtime": "python3.8",
                "Timeout": 900,
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"}
                ]
            }
        },
        "LambdaInvokeGlueTstEvent": {
            "Type" : "AWS::Lambda::EventSourceMapping",
            "Properties" : {
                "Enabled" : true,
                "EventSourceArn" : {"Fn::GetAtt": ["SQSTst", "Arn"]},
                "FunctionName" : {"Fn::GetAtt": ["LambdaInvokeGlueTST", "Arn"]}
            }
        },
        "LambdaInvokeGluePRD": {
            "Type" : "AWS::Lambda::Function",
            "Properties" : {
                "Code": {
                    "S3Bucket" : "porter-public-assets",
                    "S3Key" : "lambda/porter-glue-executor.zip"
                },
                "Description": "Invoke a glue job to convert data from raw to clean",
                "Handler": "porter-glue-executor.lambda_handler",
                "Role": {"Fn::GetAtt": ["ETLJobExecutionRole", "Arn"]},
                "Runtime": "python3.8",
                "Timeout": 900,
                "Tags": [
                    {"Key": "app",
                    "Value": "porter"}
                ]
            }
        },
        "LambdaInvokeGluePrdEvent": {
            "Type" : "AWS::Lambda::EventSourceMapping",
            "Properties" : {
                "Enabled" : true,
                "EventSourceArn" : {"Fn::GetAtt": ["SQSPrd", "Arn"]},
                "FunctionName" : {"Fn::GetAtt": ["LambdaInvokeGluePRD", "Arn"]}
            }
        },
    }
}
